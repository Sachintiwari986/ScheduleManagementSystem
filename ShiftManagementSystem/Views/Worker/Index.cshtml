@model IEnumerable<ShiftManagementSystem.Models.Worker>

<div class="container">
	<h2>Worker List</h2>
	 <h3 class="btn btn-primary" style="background-color: #5a8dee; color: white;">
                    <a href="@Url.Action("AddWorker", "Worker", new { Id = 0 })" style="color: white;">Add Worker</a>
       </h3>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Phone Number</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var worker in Model)
			{
				<tr>
					<td>@worker.Name</td>
					<td>@worker.Email</td>
					<td>@worker.PhoneNumber</td>
		
					<td>
						@Html.ActionLink("Edit", "AddWorker", new { id = worker.Id }, new { @class = "btn btn-primary btn-sm" })
						@Html.ActionLink("Delete", "DeleteWorker", new { id = worker.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this worker?');" })
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
