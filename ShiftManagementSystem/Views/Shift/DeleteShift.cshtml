@model ShiftManagementSystem.Models.Shift
<div class="modal" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3 p-md-5">
            <button type="button"
                    class="btn-close btn-pinned"
                    data-bs-dismiss="modal"
                    aria-label="Close"></button>
            <form asp-action="DeleteConfirmed">
            <div class="modal-body">
                <div class="text-center mb-4">
                    <h4>Do you really want to delete this Shift?</h4>
                </div>
                @Html.HiddenFor(x=>x.Id)
                <div class="row g-3">
                    <div class="col-md-12">
                        <label>Shift Date :</label>
                        @Html.DisplayFor(x=>x.Date)
                    </div>

                    
                @*    <div class="col-md-12">
                        <label>Display Order :</label>
                        @Html.DisplayFor(x=>x.DisplayOrder)
                    </div>*@


                    
                </div>
                <div class="col-12 text-center demo-vertical-spacing">
                        <a href="@Url.Action("DeleteShiftConfirmed","Shift",new{id=Model.Id})" class="btn btn-danger me-sm-3 me-1 ">Delete</a>
                    <button type="reset"
                            class="btn btn-label-secondary"
                            data-bs-dismiss="modal"
                            aria-label="Close">
                        Discard
                    </button>
                </div>
                
            </div>
            </form>
        </div>
    </div>
