@model IEnumerable<ShiftManagementSystem.Models.Shift>

<div class="container">
	<h2>Shift List</h2>
	 <h3 class="btn btn-primary" style="background-color: #5a8dee; color: white;">
                    <a href="@Url.Action("AddShift", "Shift", new { Id = 0 })" style="color: white;">Add Shift</a>
       </h3>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Date</th>
				<th>Time</th>
				<th>Location</th>
				<th>Task</th>
				<th>Rate</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var shift in Model)
			{
				<tr>
					<td>@shift.Date.ToString("MM/dd/yyyy")</td>
					<td>@shift.Time</td>
					<td>@shift.Location</td>
					<td>@shift.Task</td>
					<td>@shift.Rate</td>
					<td>
						@Html.ActionLink("Edit", "AddShift", new { id = shift.Id }, new { @class = "btn btn-primary btn-sm" })
						@Html.ActionLink("Delete", "DeleteShift", new { id = shift.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this shift?');" })
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
